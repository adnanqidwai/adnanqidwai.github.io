---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="skill-category">
  <h3>{title}</h3>
  <slot />
</div>

<style>
  .skill-category {
    margin-bottom: 2rem;
  }
  h3 {
    color: var(--primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-shadow: var(--primary-glow);
  }
</style>